<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="192dp"
            android:height="192dp"
            android:viewportWidth="192"
            android:viewportHeight="192">
            <group
                android:name="group"
                android:pivotY="192"
                android:scaleX="0"
                android:scaleY="0">
                <path
                    android:name="path"
                    android:pathData="M 0 65 L 0 94.8 C 50 94.8 90.6 138.3 90.6 192 L 118.3 192 C 118.3 121.9 65.3 65 0 65 Z"
                    android:fillColor="#c7dafb"
                    android:strokeWidth="1"/>
            </group>
            <group
                android:name="group_1"
                android:pivotY="192"
                android:scaleX="0"
                android:scaleY="0">
                <path
                    android:name="path_1"
                    android:pathData="M 0 94.8 L 0 124.1 C 34.9 124.1 63.2 154.5 63.2 192 L 90.5 192 C 90.6 138.3 50 94.8 0 94.8 Z"
                    android:fillColor="#7dabf5"
                    android:strokeWidth="1"/>
            </group>
            <group
                android:name="group_2"
                android:pivotY="192"
                android:scaleX="0"
                android:scaleY="0">
                <path
                    android:name="path_2"
                    android:pathData="M 0 124.1 L 0 192 L 63.2 192 C 63.2 154.5 34.9 124.1 0 124.1 Z"
                    android:fillColor="#3c6ed7"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group_2">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="300"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="300"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="group_1">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="200"
                    android:duration="300"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="200"
                    android:duration="300"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="300"
                    android:duration="300"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="300"
                    android:duration="300"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
