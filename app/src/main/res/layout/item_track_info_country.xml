<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="4dp"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_track_info_country_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:background="@drawable/background_updates_shards_country"
        android:clipToOutline="true"
        android:outlineProvider="background"
        tools:src="@drawable/ic_flag_us" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:id="@+id/item_track_info_country_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.AmbientMusicMod"
            android:textColor="?android:textColorPrimary"
            tools:text="Setting Title" />

        <TextView
            android:id="@+id/item_track_info_country_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.AmbientMusicMod"
            android:textColor="?android:textColorPrimary"
            tools:text="Setting Content" />

    </LinearLayout>

</LinearLayout>