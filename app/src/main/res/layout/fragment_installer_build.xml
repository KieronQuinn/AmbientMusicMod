<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:padding="@dimen/padding_16">

    <ImageView
        android:id="@+id/installer_build_avd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="@dimen/padding_16"
        android:src="@drawable/avd_folder_to_zip"
        app:layout_constraintBottom_toTopOf="@id/installer_build_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/installer_build_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/installer_build_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Ambient"
        app:layout_constraintBottom_toTopOf="@id/installer_build_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installer_build_avd" />

    <TextView
        android:id="@+id/installer_build_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_16"
        android:text="@string/installer_build_building_module"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installer_build_title" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/installer_build_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        app:layout_constraintTop_toBottomOf="@id/installer_build_content"
        app:trackCornerRadius="4dp"
        app:trackThickness="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/installer_build_close"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_16"
        android:fontFamily="@font/google_sans_medium"
        android:text="@string/installer_build_close"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installer_build_content"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>