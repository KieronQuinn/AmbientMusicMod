<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_16">

    <ProgressBar
        android:id="@+id/installer_model_check_spin"
        style="@android:style/Widget.Material.ProgressBar.Large"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/installer_model_check_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/installer_model_check_spin"
        app:layout_constraintEnd_toEndOf="@id/installer_model_check_spin"
        app:layout_constraintStart_toStartOf="@id/installer_model_check_spin"
        app:layout_constraintTop_toTopOf="@id/installer_model_check_spin"
        tools:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/installer_model_check_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Ambient.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installer_model_check_spin"
        tools:text="@string/installer_get_model_state_check_state_awaiting_title" />

    <TextView
        android:id="@+id/installer_model_check_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Ambient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/installer_model_check_title"
        tools:text="@string/installer_get_model_state_check_state_awaiting_content" />

    <CheckBox
        android:id="@+id/installer_model_check_override_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:paddingStart="@dimen/padding_8"
        android:text="@string/installer_get_model_state_check_state_result_content_failed_check"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Ambient"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/installer_model_check_content"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>