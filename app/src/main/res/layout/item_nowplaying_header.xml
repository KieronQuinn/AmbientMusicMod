<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/item_nowplaying_header_lottie"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:adjustViewBounds="true"
        android:background="@drawable/background_lottie_nowplaying"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_nowplaying" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/item_nowplaying_header_preview"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.AmbientMusicMod"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/item_nowplaying_header_lottie"
        app:layout_constraintEnd_toEndOf="@id/item_nowplaying_header_lottie"
        app:layout_constraintStart_toStartOf="@id/item_nowplaying_header_lottie"
        app:layout_constraintTop_toTopOf="@id/item_nowplaying_header_lottie"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>