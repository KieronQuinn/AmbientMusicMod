<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avd_splash_bg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:background="@drawable/splash_bg_clip"
        android:src="@drawable/avd_splash_bg" />

    <ImageView
        android:id="@+id/avd_splash_fg"
        android:layout_width="@dimen/splash_image_music"
        android:layout_height="@dimen/splash_image_music"
        android:layout_gravity="center"
        android:src="@drawable/audioanim_animation"
        android:visibility="invisible"
        android:elevation="8dp"
        app:tint="@color/accent"
        tools:visibility="visible" />

</FrameLayout>