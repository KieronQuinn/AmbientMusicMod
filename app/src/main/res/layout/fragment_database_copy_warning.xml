<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_16">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/database_viewer_copy_warning_lottie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/database_viewer_copy_warning_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_cpu" />

    <TextView
        android:id="@+id/database_viewer_copy_warning_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        android:gravity="center"
        android:text="@string/database_viewer_copy_warning_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Ambient"
        app:layout_constraintBottom_toTopOf="@id/database_viewer_copy_warning_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/database_viewer_copy_warning_lottie" />

    <TextView
        android:id="@+id/database_viewer_copy_warning_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:gravity="center"
        android:text="@string/database_viewer_copy_warning_content"
        app:layout_constraintBottom_toTopOf="@id/database_viewer_copy_warning_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/database_viewer_copy_warning_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/database_viewer_copy_warning_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_24"
        android:fontFamily="@font/google_sans_medium"
        android:text="@string/database_viewer_copy_warning_start"
        android:textAllCaps="false"
        app:icon="@drawable/ic_database_copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/database_viewer_copy_warning_content" />

</androidx.constraintlayout.widget.ConstraintLayout>